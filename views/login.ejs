<%- include('layout', { body: `
<div class="auth-page">
  <h2>로그인</h2>
  ${error ? '<div class="alert alert-error">' + error + '</div>' : ''}
  <form method="POST" action="/auth/login" class="auth-form">
    <div class="form-group">
      <label>이메일</label>
      <input type="email" name="email" required placeholder="이메일 입력">
    </div>
    <div class="form-group">
      <label>비밀번호</label>
      <input type="password" name="password" required placeholder="비밀번호 입력">
    </div>
    <button type="submit" class="btn btn-primary btn-full">로그인</button>
  </form>
  <div class="auth-divider"><span>또는</span></div>
  <a href="/auth/kakao" class="btn btn-kakao btn-full">카카오 로그인</a>
  <p class="auth-link">계정이 없으신가요? <a href="/auth/register">회원가입</a></p>
</div>
` }) %>
